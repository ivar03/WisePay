<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SmsVerificationActivity"
    android:background="@color/green_light">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/back_icon"
        app:tint="@color/green_medium2"
        android:padding="8dp"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SMS Verification:"
        android:textSize="20sp"
        android:textColor="@color/green_dark"
        android:textStyle="bold"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@+id/back_btn"/>

    <TextView
        android:id="@+id/subHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="verifies if the message is fraud or not"
        android:textSize="15sp"
        android:textColor="@color/green_dark"
        android:textStyle="bold"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@+id/heading"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sms_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@id/subHeading"
        android:layout_marginTop="20dp"/>

</RelativeLayout>